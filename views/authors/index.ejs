<h2>Search</h2>
<form action="/author" method="GET">
<label>Name</label>
<input type="text" name="name" value ="<%=searchOptions.name %>">
<button type="submit">Search</button>
</form>
<br>
<%authors.forEach(author => { %>

    <div><%=author.name%></div>
    <a href =  "/author/<%=author.id%>"> View</a>
    <a href =  "/author/<%=author.id%>/edit"> Edit</a>
    <form  method ="POST" action ="/author/<%=author.id%>?_method=DELETE">
        <button type="submit">Delete</button>
    </form>


<%})%>